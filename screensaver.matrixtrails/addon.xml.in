<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.matrixtrails"
  version="2.5.1"
  name="Matrix trails"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="de_DE">Matrix Regen Bildschirmschoner</summary>
    <summary lang="en_GB">Matrix trails screensaver</summary>
    <description lang="de_DE">Der "digitale Regen" Effekt, wie er auf den Computermonitoren in "Matrix" zu sehen ist.

In seinen Einstellungen kannst du auch eigene Farben und Größen des Regens bestimmen.</description>
    <description lang="en_GB">The "digital rain" effect, as seen on the computer monitors in "The Matrix".

In its settings you can also define your own colors and sizes of rain.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/xbmc/screensaver.matrixtrails</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
      <screenshot>resources/screenshot-04.jpg</screenshot>
    </assets>
  </extension>
</addon>
